{% extends 'global/base.html.twig' %}

{% if uri.param('view') %}
    {% set view = uri.param('view') %}
{% endif %}

{% block content %}
    <div class="feed">

        {# Listbar #}
        {% include 'navigation/listbar.html.twig' %}

        {# List #}
        {% if view == 'compact' %}

            {% for p in page.children.order('date', 'desc') %}
                <div class='item compact'>

                    <div class='text'>

                        {# Meta #}
                        <div class='meta'>
                            <div class='date'>{{ p.date|date('Y-m-d') }}</div>
                            <div class='provider'>{{ p.header.provider_name }}</div>
                        </div>
                        
                        {# Title #}
                        <h1 class='title'><a href='{{p.url}}'>{{p.title}}</a></h1>

                        {# Tags #}
                        <div class='tags'>
                            {% for tag in p.taxonomy.tag %}
                                <a href="{{ base_url }}/filter/tag:{{ tag }}" class="tag">{{ tag }}</a>
                            {% endfor %}
                        </div>

                    </div>
                    
                </div>
            {% endfor %}

        {% else %}

             {% for p in page.children.order('date', 'desc') %}
                <div class='item small'>

                    <a href='{{p.url}}' class='link'></a>

                    <div class='text'>

                        {# Meta #}
                        <div class='meta'>
                            <div class='date'>{{ p.date|date('Y-m-d') }}</div>
                            <div class='provider'>{{ p.header.provider_name }}</div>
                        </div>
                        
                        {# Title #}
                        <h1 class='title'>{{p.title}}</h1>

                    </div>

                    <div class='image'>
                        {% if p.header.featured_image %}
                            {{ p.media[p.header.featured_image].cropZoom(200, 200).html('', p.title|escape)}}
                        {% else %}
                            <img src='{{ p.header.external_image }}'>
                        {% endif %}
                    </div> 

                    {# Tags #}
                    <div class='tags'>
                        {% for tag in p.taxonomy.tag %}
                            <a href="{{ base_url }}/filter/tag:{{ tag }}" class="tag">{{ tag }}</a>
                        {% endfor %}
                    </div>
                    
                </div>
            {% endfor %}

        {% endif %}

    </div>
{% endblock %}
