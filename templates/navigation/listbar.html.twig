{% if uri.param('view') %}
    {% set view = uri.param('view') %}
{% else %}
    {% set view = 'expanded' %}
{% endif %}

<div class="listbar" aria-hidden="true">
    <div class='listbar--description'>
        {{ page.content }}
    </div>

    <div class='listbar--view'>
        <a href='{{ base_url }}/{{ page.slug }}/view:compact' class="listbar--view--item{% if view == 'compact' %} active{% endif %}">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" class="feather feather-list"><line x1="8" y1="6" x2="21" y2="6"></line><line x1="8" y1="12" x2="21" y2="12"></line><line x1="8" y1="18" x2="21" y2="18"></line><line x1="3" y1="6" x2="3" y2="6"></line><line x1="3" y1="12" x2="3" y2="12"></line><line x1="3" y1="18" x2="3" y2="18"></line></svg>
        </a>
        <a href='{{ base_url }}/{{ page.slug }}/view:expanded' class="listbar--view--item{% if view == 'expanded' %} active{% endif %}">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" class="feather feather-grid"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>
        </a>
    </div>

</div>