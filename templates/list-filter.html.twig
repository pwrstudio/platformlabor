{% extends 'global/base.html.twig' %}

{% block content %}

{# Construct Query object #}

{% set query = {} %}

{% if uri.param('tag') %}
    {% set query = uri.param('tag')|split('&') %}
{% endif %}
            
<div class="filter">

    <div class='filter--header'>Tag: {{query|join(',')}} ({{ taxonomy.findTaxonomy({tag: query})|length }})</div>

    {# LIST #}
    {% for p in taxonomy.findTaxonomy({tag: query}) %}
        <div href='{{p.url}}' class='filter--item__list'>

            <a href='{{p.url}}' class='filter--item__list--link'></a>

            <div class='filter--item__list--text'>

                {# Meta #}
                <div class='filter--item__list--text--meta'>

                    {# Date #}
                    <div class='filter--item__list--text--meta--date'>{{ p.date|date('Y-m-d') }}</div>
                    
                    {# Author #}
                    {% if p.header.author %}
                        {% for author in p.header.author %}
                            <div class='notes--item__compact--text--meta--author'>{{ page.find(author).title }}</div>
                        {% endfor %}
                    {% endif %}

                    {# Provider #}
                    {% if p.header.provider_name %}
                        <div class='feed--item__list--text--meta--provider'>{{ p.header.provider_name }}</div>
                    {% endif %}

                </div>
                
                {# Title #}
                <h1 class='filter--item__list--text--title'>{{p.title}}</h1>

            </div>

            <div class='filter--item__list--image'>
                {% if p.template == 'single-feed' %}
                    {% if p.header.featured_image %}
                        {{ p.media[p.header.featured_image].cropResize(600).html('', p.title|escape)}}
                    {% else %}
                        <img src='{{ p.header.external_image }}'>
                    {% endif %}
                {% else %}
                    {{ p.media[p.header.featured_image].html('', p.title|escape)}}
                {% endif %}
            </div>   

            {# Tags #}
            <div class='filter--item__list--tags'>
                {% for tag in p.taxonomy.tag %}
                    <a href="{{ base_url }}/filter/tag:{{ tag }}" class="filter--item__list--tags--item">{{ tag }}</a>
                {% endfor %}
            </div>
            
        </div>
    {% endfor %}

    <div class='filter--item__more'>
        <div class='filter--item__more--button'>Load more</div>
    </div>

</div>

<script src="//comments.platformlabor.net/js/count.min.js"></script>

{% endblock %}

